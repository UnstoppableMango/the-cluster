{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": [
    "v2"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**",
    "**/__fixtures__/**",
    "old-stacks/**",
    "src/**",
    "lib/**",
    "stacks/auth/**",
    "stacks/dev/**",
    "stacks/management/**",
    "stacks/media/**",
    "stacks/networking/**",
    "stacks/rancher/**",
    "stacks/storage/**"
  ],
  "ignoreDeps": [
    "submodules/actions-runner-controller",
    "submodules/cert-manager",
    "submodules/metallb",
    "submodules/traefik-helm-chart"
  ],
  "major": {
    "dependencyDashboardApproval": true
  },
  "git-submodules": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        ".*/\\.versions$"
      ],
      "matchStrings": [
        "(?<depName>.*)=(?<currentValue>.*)"
      ],
      "versioningTemplate": "semver-coerced",
      "datasourceTemplate": "github-tags"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "k8s",
        "kubernetes",
        "talos"
      ],
      "dependencyDashboardApproval": true
    },
    {
      "matchPackagePatterns": [
        "talos"
      ],
      "groupName": "talos"
    }
  ]
}
