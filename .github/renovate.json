{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"github>UnstoppableMango/renovate-config",
		"schedule:weekly"
	],
	"ignorePaths": [
		"**/node_modules/**",
		"**/vendor/**",
		"**/testdata/**",
		"charts/**",
		"clusters/**",
		"crds/**",
		"lib/**"
	],
	"ignoreDeps": [
		"@pulumi/crds",
		"@unstoppablemango/thecluster",
		"@unstoppablemango/thecluster-crds"
	],
	"major": {
		"dependencyDashboardApproval": true
	},
	"kubernetes": {
		"managerFilePatterns": ["/flux/.+\\.ya?ml$/"]
	},
	"flux": {
		"managerFilePatterns": ["/flux/.+\\.ya?ml$/"]
	},
	"packageRules": [
		{
			"matchPackageNames": ["/^goharbor\\/.*/"],
			"groupName": "harbor"
		},
		{
			"matchPackageNames": [
				"/bitnami\\/sealed-secrets-controller/",
				"/bitnami-labs\\/sealed-secrets/"
			],
			"groupName": "sealed-secrets"
		}
	]
}
