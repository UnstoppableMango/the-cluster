{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**",
    "**/__fixtures__/**",
    "old-stacks/**",
    "src/**",
    "lib/**",
    "**/crds/**"
  ],
  "major": {
    "dependencyDashboardApproval": true
  },
  "git-submodules": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        ".*/\\.versions$"
      ],
      "matchStrings": [
        "(?<depName>.*): (?<currentValue>.*)"
      ],
      "versioningTemplate": "semver-coerced",
      "datasourceTemplate": "github-tags"
    }
  ],
  "packageRules": [
    {
      "matchDepNames": [
        "kubernetes/kubernetes",
        "siderolabs/talos"
      ],
      "dependencyDashboardApproval": true,
      "extractVersion": "^v(?<version>.*)"
    },
    {
      "matchPackagePatterns": [
        "talos"
      ],
      "groupName": "talos"
    }
  ]
}
