{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/vendor/**",
    "**/test/**",
    "**/tests/**",
    "lib/**"
  ],
  "major": {
    "dependencyDashboardApproval": true
  },
  "git-submodules": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        ".*/\\.versions$"
      ],
      "matchStrings": [
        "(?<depName>.*): (?<currentValue>.*)"
      ],
      "versioningTemplate": "semver-coerced",
      "datasourceTemplate": "github-tags"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^\\.github\\/workflows\\/.*\\.(yml|yaml)$",
        "^\\.github\\/.*\\/action\\.(yml|yaml)$",
        "^.*Pulumi.*\\.(yml|yaml)$"
      ],
      "matchStrings": [
        "[^\\s]+?: (?<currentValue>.*) # renovate depName=(?<depName>[^\\s]+?)(?: ?(?:packageName=(?<packageName>[^\\s]+?)|extractVersion=(?<extractVersion>[^\\s+?]+?)))*$"
      ],
      "versioningTemplate": "semver-coerced",
      "extractVersionTemplate": "{{#if extractVersion}}{{{extractVersion}}}{{else}}^v(?<version>.*){{/if}}",
      "datasourceTemplate": "github-tags"
    }
  ],
  "packageRules": [
    {
      "matchDepNames": [
        "cert-manager/cert-manager",
        "kubernetes/kubernetes",
        "kubernetes-sigs/cluster-api",
        "pulumi/pulumi",
        "siderolabs/cluster-api-bootstrap-provider-talos",
        "siderolabs/cluster-api-control-plane-provider-talos",
        "siderolabs/sidero",
        "siderolabs/talos",
        "sp-yduck/cluster-api-provider-proxmox"
      ],
      "dependencyDashboardApproval": true,
      "extractVersion": "^v(?<version>.*)"
    },
    {
      "matchPackagePatterns": [
        "talos"
      ],
      "groupName": "talos"
    },
    {
      "matchPackagePatterns": [
        "pulumi/pulumi"
      ],
      "groupName": "pulumi"
    },
    {
      "matchPackagePatterns": [
        "cert-manager"
      ],
      "groupName": "cert-manager"
    },
    {
      "matchPackagePatterns": [
        "renovate",
        "^typescript$",
        "^yaml$",
        "@actions/core",
        "@actions/github",
        "@types/node",
        "@vercel/ncc"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
