{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/vendor/**",
    "**/test/**",
    "**/tests/**",
    "**/.save/**",
    "apps/**",
    "charts/**",
    "clusters/**",
    "containers/**",
    "dbs/**",
    "infra/**",
    "lib/**",
    "operator/**",
    "tools/**"
  ],
  "ignoreDeps": [
    "@unstoppablemango/thecluster",
    "@unstoppablemango/thecluster-crds"
  ],
  "major": {
    "dependencyDashboardApproval": true
  },
  "git-submodules": {
    "enabled": true
  },
  "customManagers": [],
  "packageRules": []
}
