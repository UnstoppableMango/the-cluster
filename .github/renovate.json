{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**",
    "**/__fixtures__/**",
    "src/**",
    "lib/**",
    "**/crds/**"
  ],
  "major": {
    "dependencyDashboardApproval": true
  },
  "git-submodules": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        ".*/\\.versions$"
      ],
      "matchStrings": [
        "(?<depName>.*): (?<currentValue>.*)"
      ],
      "versioningTemplate": "semver-coerced",
      "datasourceTemplate": "github-tags"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^\\.github\\/workflows\\/.*\\.(yml|yaml)$"
      ],
      "matchStrings": [
        ".*: (?<currentValue>.*) # renovate depName=(?<depName>.*)"
      ],
      "versioningTemplate": "semver-coerced",
      "datasourceTemplate": "github-tags"
    }
  ],
  "packageRules": [
    {
      "matchDepNames": [
        "kubernetes/kubernetes",
        "kubernetes-sigs/cluster-api",
        "metal3-io/cluster-api-provider-metal3",
        "pulumi/pulumi",
        "siderolabs/cluster-api-bootstrap-provider-talos",
        "siderolabs/cluster-api-control-plane-provider-talos",
        "siderolabs/sidero",
        "siderolabs/talos",
        "sp-yduck/cluster-api-provider-proxmox"
      ],
      "dependencyDashboardApproval": true,
      "extractVersion": "^v(?<version>.*)"
    },
    {
      "matchPackagePatterns": [
        "talos"
      ],
      "groupName": "talos"
    },
    {
      "matchPackagePatterns": [
        "pulumi/pulumi"
      ],
      "groupName": "pulumi"
    }
  ]
}
